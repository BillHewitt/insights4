<%-# Header starts -%>
<div class="row gap">
	<div class="col-6">
		<nav aria-label="breadcrumb" role="navigation">
		  <ol class="breadcrumb">
		    <li class="breadcrumb-item active" aria-current="page">Surveys</li>
		  </ol>
		</nav>
	</div>
	<div class="col-6">
		<div class="float-right">
			<%= link_to  do %>
				<button type="button" class="btn btn-warning button-large">Create new survey</button>
			<% end %>
		</div>
	</div>
</div>
<%-# Header ends -%>

<%-# Separator -%>

<div class="card">
	<div class="card-body">
		<div class="row engagement">
			<div class="col-md-3">
				<img src="https://i.imgur.com/EnVjqLg.png" class="rounded mx-auto d-block">
			</div>
			<div class="col-md-6">
				<h2>Employee Engagement</h2>
				<p class="text-muted">Your next pulse survey is scheduled to be sent out on Thurs 21st March at 2.00pm</p>
				<%= link_to pages_stats_path do %>
					<button type="button" class="btn btn-light ">Schedule & Settings</button>
				<% end %>
				<%= link_to pages_engagement_path do %>
					<button type="button" class="btn btn-warning ">View results</button>
				<% end %>
			</div>
		</div>
	</div>
</div>

   

